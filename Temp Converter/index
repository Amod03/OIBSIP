    <style>
      body {
        padding: 50px 100px;
      }
      h1 {
        text-align: center;
        font-size: 40px;
      }
      #container {
        text-align: center;
        background-color: lightcyan;
        padding: 50px;

      }
      .input-div {
        display: inline-block;
      }
      .inp {
        padding: 5px 10px;
        margin: 10px;
        font-size: 30px;
        font-weight: bold;
        width: 250px;
      }
      body {
        background-image: url("temp.jpg");
        background-repeat: no-repeat;
        background-size: 1600px;
      }
      label {
        font-size: 30px;
        font-family: cursive;
