  <body>
    <h1>TEMPERATURE CONVERTOR</h1>
    <div id="container">
      <div class="input-div">
        <label>CELSIUS</label><br />
        <input type="number" value="0" id="CELSIUS" class="inp" />
      </div>
      <div class="input-div">
        <label>FAHRENHEIT</label><br />
        <input type="number" value="32" id="FAHRENHEIT" class="inp" />
      </div>
    </div>
    <script>
      var cel1 = document.getElementById("CELSIUS");
      var fah1 = document.getElementById("FAHRENHEIT");

      cel1.addEventListener("input", function () {
        let c = this.value;
        let f = (c * 9) / 5 + 32;
        if (!Number.isInteger(f)) {
          f = f.toFixed(4);
        }
        FAHRENHEIT.value = f;
      });
      fah1.addEventListener("input", function () {
        let f = this.value;
        let c = ((f - 32) * 5) / 9;
        if (!Number.isInteger(c)) {
          c = c.toFixed(4);
        }
        CELSIUS.value = c;
      });
    </script>
  </body>
